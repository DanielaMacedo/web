    <section class="container">
        <header>Actualiza tu proyecto</header>
        <form action="/modificar-proyectos" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="proyectoId" value="<%= proyecto.id %>">
            <div class="input-box">
              <label>Título</label>
              <input type="text" name="titulo" value="<%= proyecto.titulo %>" required />
            </div>
          
            <div class="input-box">
              <label>Descripción</label>
              <input type="text" name="descripcion" value="<%= proyecto.descripcion %>" required />
            </div>
          
            <div class="input-box">
              <label>Materia</label>
              <input type="text" name="mat" value="<%= proyecto.materia %>" required />
            </div>
          
            <div class="input-box">
              <label>Autor</label>
              <input type="text" name="autor" value="<%= proyecto.autor %>" required />
            </div>
        
            <div class="input-box">
              <label for="nombre">Fotografia:</label>
              <input type="file" id="imagen" name="file" value="<%= proyecto.imagenes %>">
            </div>
          
            <button type="submit">Guardar cambios</button>
            <br>
        <a href="/hproyect" class="btn-inicio">Cancelar</a>
          </form>
      </section>
